<head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>

<div class="viewUserContainer">
    <h2>UserID: {{UserId}}</h2>
    <h2>First Name: {{FirstName}}</h2>
    <h2>Last Name: {{LastName}}</h2>
    <h2>Username: {{Username}}</h2>
    <h2>Password: {{Password}}</h2>
    <h2>Admin: {{AdminUser}}</h2>
    <h2>Creation Date: {{CreationDate}}</h2>
    <h2>Last Updated: {{UpdatedDate}}</h2>
    <h2>Deleted: {{Deleted}}</h2>

    <script>
        function onDelete() {
            $.ajax({
                url: '/users/{{UserId}}/delete',
                method: 'DELETE', complete: () => window.location = "/users/admin"
            })
        }
    </script>

    <div>
        <button class="deletePostBtn" onclick="onDelete()" id="deleteButton">Delete User</button>
    </div>
    <br>
    <div>
        <a class="btn2" href='/users/admin'>Back to User List</a>
    </div>
    <br>
    <br>
    <div class="postList">
        <h2 class="title">Posts</h2>
        {{#each posts}}
        <div class="postContainer">
            <h3 class="postTitle">Post Id: {{PostId}}
                <br>
                Title: {{PostTitle}}
            </h3>
            <p class="postBody">{{PostBody}}</p>
            <div>
                <a class="deletePostBtn" href="/users/admin/{{PostId}}/delete">Delete Post</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>