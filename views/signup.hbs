<div class="loginSignupContainer">
    <h1 class="title">SIGN UP</h1>
    <br>
    <form method="POST" action="/users/signup" id="signup" name="signup">
        <div class="labelInputContainer">
            <label class="label1" for="firstName">First Name: </label>
            <input class="input1" type="text" id="firstName" name="firstName" />
        </div>
        <div class="labelInputContainer">
            <label class="label1" for="lastName">Last Name: </label>
            <input class="input1" type="text" id="lastName" name="lastName" />
        </div>
        <div class="labelInputContainer">
            <label class="label1" for="email">Email: </label>
            <input class="input1" type="text" id="email" name="email" />
        </div>
        <div class="labelInputContainer">
            <label class="label1" for="username">Username: </label>
            <input class="input1" type="text" id="username" name="username" />
        </div>
        <div class="labelInputContainer">
            <label class="label1" for="password">Password: </label>
            <input class="input1" type="password" id="password" name="password" />
        </div>
        <div class="loginSignupRedirect">
            <button class="btn1" type="submit">Submit!</button>
            <p style="padding-top: 15px;">Already crushing life?</p>
            <a class="btn2" href="/users/login">Log in</a>
        </div>
    </form>
</div>